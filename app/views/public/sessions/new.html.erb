<div class="main">
  <h2 class="main__headline">ログイン</h2>
  <div class="main__errors"><%= flash[:error] %></div>

  <%= form_with model:@user, url:user_session_path, class: 'form', local:true do |f| %>
    <div class="form__field">
      <%= f.label :email, "メールアドレス", class: 'form__label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form__imput' %>
    </div>

    <div class="form__field">
      <%= f.label :password, "パスワード", class: 'form__label' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form__imput' %>
    </div>

    <div class="form__actions">
      <div class="form__submit">
        <%= f.submit "ログイン", class: 'form__button' %>
      </div>
      <div class="form__link">
        <%= link_to "まだユーザ登録をされていない方はこちら", new_user_registration_path, class: 'form__add-user' %>
      </div>
    </div>
  <% end %>
</div>
