<div>
  <%= f.label :name, "アニメタイトル" %><br />
  <%= f.text_field :name, autofocus: true %>
</div>
<div>
  <%= f.label :image, "アニメ画像" %><br />
  <%= f.attachment_field :image %>
</div>
<div>
  <%= f.label :introduction, "あらすじ" %><br />
  <%= f.text_area :introduction %>
</div>
<div>
  <%= f.label :genre_id, "ジャンル" %><br />
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name, anime.genre_id), {include_blank: "--選択してください--"} %>
</div>
<div>
  <%= f.label :tag_list, "タグ" %><br />
  <% @tags.each do |tag| %>
    <%= f.check_box :tag_list, { multiple: true }, "#{tag.name}", nil %>
    <%= f.label "#{tag.name}(#{tag.taggings_count})" %><br />
  <% end %>
</div>