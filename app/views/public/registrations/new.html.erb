<div class="main">
  <h2 class="main__headline">新規ユーザ登録</h2>

  <%= form_with model:@user, url:user_registration_path, class: 'form', local:true do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form__notice">※　必須項目</div>

    <div class="form__field">
      <%= f.label :name, "名前 ※", class: 'form__label' %>
      <%= f.text_field :name, autofocus: true, class: 'form__imput' %>
    </div>

    <div class="form__field">
      <%= f.label :email, "メールアドレス ※", class: 'form__label' %>
      <%= f.email_field :email, autocomplete: "email", class: 'form__imput' %>
    </div>

    <div class="form__field">
      <%= f.label :password, "パスワード (６文字以上) ※", class: 'form__label' %>
      <%= f.password_field :password, class: 'form__imput' %>
    </div>

    <div class="form__field">
      <%= f.label :password_confirmation, "パスワード再入力 ※", class: 'form__label' %>
      <%= f.password_field :password_confirmation, class: 'form__imput' %>
    </div>

    <div class="form__actions">
      <div class="form__submit">
        <%= f.submit "新規登録", class: 'form__button' %>
      </div>
    </div>
  <% end %>
</div>

