<h3>マイページ</h3>

<table>
  <tbody>
    <tr>
      <th>ユーザアイコン</th>
    </tr>
    <tr>
      <td><%= attachment_image_tag @user, :icon, :fill, 100, 100 %></td>
    </tr>
    <tr>
      <th>ユーザ名</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>

<div><%= link_to "ユーザ情報編集", user_edit_path %></div>
<div><%= link_to "投稿アニメ一覧" %> </div>