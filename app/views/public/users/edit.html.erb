<div class="main">
  <h2 class="main__headline">ユーザ情報編集</h2>

  <h3 class="main__body-headline">プロフィール編集</h3>
  <%= form_with model:@user, url:user_update_path, class: 'form', local:true do |f| %>
    <% if @user.errors.any? %>
      <div class="form__error_explanation">
        <ul class="form__error-list">
          <% @user.errors.full_messages.each do |message| %>
            <li class="form__error-item"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form__field">
      <%= attachment_image_tag @user, :icon, :fill, 100, 100 %>
      <%= f.attachment_field :icon %>
    </div>

    <div class="form__field">
      <%= f.label :name, "ユーザ名", class: 'form__label' %>
      <%= f.text_field :name, autofocus: true, class: 'form__imput' %>
    </div>

    <div class="form__field">
      <%= f.label :email, "メールアドレス", class: 'form__label' %>
      <%= f.email_field :email, autocomplete: "email", class: 'form__imput' %>
    </div>

    <div class="form__field">
      <%= f.label :introduction, "自己紹介", class: 'form__label' %>
      <%= f.text_area :introduction, rows:'5', cols:'40', class: 'form__imput' %>
    </div>

    <div class="form__actions">
      <%= f.submit "変更保存", class: 'form__button' %>
    </div>
  <% end %>
  <h3 class="main__headline">退会</h3>
  <div class="form__link">
    <%= link_to "退会手続きはこちらから行えます", user_confirm_path, class: 'form__add-user' %>
  </div>
</div>