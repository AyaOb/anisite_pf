<h2>ユーザ情報編集</h2>

<h3>プロフィール編集</h3>
<%= form_with model:@user, url:user_update_path, local:true do |f| %>
  <div class="field">
    <%= f.label :icon, "ユーザアイコン" %><br />
    <%= attachment_image_tag @user, :icon, :fill, 100, 100 %>
    <%= f.attachment_field :icon %>
  </div>

  <div class="field">
    <%= f.label :name, "ユーザ名" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :introduction, "自己紹介" %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="actions">
    <%= f.submit "変更保存" %>
  </div>
<% end %>
<h3>退会</h3>
<div><%= link_to "退会手続きはこちらから行えます", user_confirm_path %></div>