<div class="main">
  <h2 class="main__headline">管理者ログイン</h2>
  <div class="main__body">
    <%= form_with model: @admin, url:admin_session_path, class: 'form', local: true do |f| %>
      <div class="form__field">
        <%= f.label :email, "メールアドレス", class: 'form__label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form__imput' %>
      </div>

      <div class="form__field">
        <%= f.label :password, "パスワード", class: 'form__label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form__imput' %>
      </div>

      <div class="form__actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
</div>



