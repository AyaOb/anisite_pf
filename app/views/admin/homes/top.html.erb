<div class="main">
  <h2 class="main__headline">アニメ一覧</h2>
  <div>
    <% @anime_list.each do |anime| %>
      <div>
        <div>
          <%= link_to admin_anime_path(anime.id) do %>
            <%= attachment_image_tag anime, :image, :fill, 200, 100 %>
          <% end %>
          <div>引用元：</div>
        </div>
        <div>
          <%= link_to anime.name, admin_anime_path(anime.id) %>(<%= link_to anime.user.name %>)<br />
          更新日:<%= l anime.updated_at, format: :short %>
          <% if anime.is_active %>
            <div>表示</div>
          <% else %>
            <div>非表示</div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
