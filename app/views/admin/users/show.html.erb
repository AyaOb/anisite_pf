<div class="main">
  <h2 class="main__headline"><%= @user.name %>さんの会員詳細情報</h2>
  <table class="profile">
    <tbody>
      <tr>
        <th class="profile__title">ユーザID</th>
        <td class="profile__item"><%= @user.id %></td>
      </tr>
      <tr>
        <th class="profile__title">ユーザ名</th>
        <td class="profile__item"><%= @user.name %></td>
      </tr>
      <tr>
        <th class="profile__title">メールアドレス</th>
        <td class="profile__item"><%= @user.email %></td>
      </tr>
      <tr>
        <th class="profile__title">自己紹介文</th>
        <td class="profile__item"><%= @user.introduction %></td>
      </tr>
      <tr>
        <th class="profile__title">ステータス</th>
        <td class="profile__item">
          <% if @user.is_active %>
            有効
          <% else %>
            退会
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="profile__edit-link">
    <%= link_to "ユーザ情報編集", edit_admin_user_path(@user.id), class: 'link' %>
  </div>
</div>