<h3><%= @user.name %>さんの会員詳細情報</h3>
<table>
  <tbody>
    <tr>
      <th>ユーザID</th>
      <td><%= @user.id %></td>
    </tr>
    <tr>
      <th>ユーザ名</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <th>自己紹介文</th>
      <td><%= @user.introduction %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td>
        <% if @user.is_active %>
          有効
        <% else %>
          退会
        <% end %>
      </td>
    </tr>
  </tbody>
</table>