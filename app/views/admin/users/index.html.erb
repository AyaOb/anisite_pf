<div class="main">
  <h2 class="main__headline">会員一覧</h2>
  <table class="profile">
    <thead>
      <td class="profile__title">ユーザID</td>
      <td class="profile__title">ユーザ名</td>
      <td class="profile__title">メールアドレス</td>
      <td class="profile__title">ステータス</td>
    </thead>
    <tbody>
      <% @user_list.each do |user| %>
        <tr>
          <td class="profile__item"><%= user.id %></td>
          <td class="profile__item"><%= link_to user.name, admin_user_path(user.id), class: 'profile__link' %></td>
          <td class="profile__item"><%= user.email %></td>
          <td class="profile__item">
            <% if user.is_active %>
              有効
            <% else %>
              退会
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>