<div class="main">
  <h2 class="main__headline"><%= @user.name %>さんの会員情報編集</h2>
  <%= form_with model:@user, url:admin_user_path(@user.id), local:true do |f| %>
    <div class="form__group">
      <div class="form__group-id">ユーザID</div>
      <div class="form__group-num"><%= @user.id %></div>
    </div>

    <div class="form__field">
      <%= f.label :name, "ユーザ名", class: 'form__label' %>
      <%= f.text_field :name, autofocus: true, class: 'form__imput' %>
    </div>

    <div class="form__field">
      <%= f.label :email, "メールアドレス", class: 'form__label' %>
      <%= f.email_field :email, autocomplete: "email", class: 'form__imput' %>
    </div>

    <div class="form__field">
      <%= f.label :introduction, "自己紹介", class: 'form__label' %>
      <%= f.text_area :introduction, rows: '5', class: 'form__imput' %>
    </div>

    <div class="form__field">
      <%= f.label :is_active, "会員ステータス", class: 'form__label' %>
      <div class='form__imput'>
        <%= f.radio_button :is_active, :true %>
        <%= f.label :is_active, "有効", value: :true %>
        <%= f.radio_button :is_active, :false %>
        <%= f.label :is_active, "退会", value: :false %>
      </div>
    </div>

    <div class="form__actions">
      <div class="form__submit">
        <%= f.submit "変更保存", class: 'form__button' %>
      </div>
    </div>
  <% end %>
</div>
