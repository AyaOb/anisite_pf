<h3><%= @user.name %>さんの会員情報編集</h3>
<%= form_with model:@user, url:admin_user_path(@user.id), local:true do |f| %>
  <div class="field">
    ユーザID
    <%= @user.id %>
  </div>

  <div class="field">
    <%= f.label :name, "ユーザ名" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :introduction, "自己紹介" %><br />
    <%= f.text_area :introduction %>
  </div>

  <div class="field">
    <%= f.label :is_active, "会員ステータス" %><br />
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "有効", value: :true %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "退会", value: :false %>
  </div>

  <div class="actions">
    <%= f.submit "変更保存" %>
  </div>
<% end %>