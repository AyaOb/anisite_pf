<h3><%= @anime.name %>(管理者アニメ詳細画面)</h3>
<div class="anime">
  <div>
    <%= link_to "編集する", edit_admin_anime_path(@anime) %>
  </div>
  <div>
    <%= attachment_image_tag @anime, :image, :fill, 200, 100 %>
  </div>
  <div><%= @anime.name %></div>
  <div>更新日:<%= @anime.updated_at %></div>
  <div><%= @anime.user.name %></div>
  <div>
    <h4>あらすじ</h4>
    <div><%= @anime.introduction %></div>
  </div>
  <div>
    <h4>ジャンル</h4>
    <div><%= @anime.genre.name %></div>
  </div>
  <div>
    <h4>ステータス</h4>
    <div>
      <% if @anime.is_active %>
        <div>公開中</div>
      <% else %>
        <div>非公開</div>
      <% end %>
    </div>
  </div>
</div>
<div class="comment">
  <h3><%= @comments.count %>件のコメント</h3>
  <% @comments.each do |comment| %>
    <div>
      ユーザ画像
      <%= comment.user.name %>
      <%= comment.created_at %><br />
      <%= comment.comment %>
      <% if comment.is_active %>
        <div>表示中</div>
      <% else %>
        <div>非表示</div>
      <% end %>
      <%= link_to "ステータス変更" %>
    </div>
  <% end %>
</div>