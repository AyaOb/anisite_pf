<div class="main">
  <h2 class="main__headline"><%= @anime.name %></h2>
  <div class="anime">
    <div>
      <%= attachment_image_tag @anime, :image, :fill, 200, 100 %>
    </div>
    <div>
      <div>引用元：</div>
      <div></div>
    </div>
    <div>
      <h4>ユーザ名</h4>
      <div><%= @anime.name %></div>
    </div>
    <div><h4>更新日</h4><%= l @anime.updated_at, format: :default %></div>
    <div><%= @anime.user.name %></div>
    <div>
      <h4>ジャンル</h4>
      <div><%= @anime.genre.name %></div>
    </div>
    <div>
      <h4>推しポイント／魅力</h4>
      <div><%= @anime.introduction %></div>
    </div>
    <div>
      <h4>ステータス</h4>
      <div>
        <% if @anime.is_active %>
          <div>公開中</div>
        <% else %>
          <div>非公開</div>
        <% end %>
      </div>
      <div>
        <%= link_to "変更", edit_admin_anime_path(@anime) %>
      </div>
    </div>
  </div>

  <div class="comment">
    <h3><%= @comments.count %>件のコメント</h3>
    <% @comments.each do |comment| %>
      <div>
        ユーザ画像
        <%= comment.user.name %>
        <%= comment.created_at %><br />
        <%= comment.comment %>
        <% if comment.is_active %>
          <div>表示中</div>
        <% else %>
          <div>非表示</div>
        <% end %>
        <%= link_to "ステータス変更" %>
      </div>
    <% end %>
  </div>
</div>