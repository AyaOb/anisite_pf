<div class="main">
  <h3 class="main__headline">ジャンル編集</h3>
  <%= form_with model:@genre, url:admin_genre_path, class: 'form', local: true do |f| %>
    <div class="form__field">
      <%= f.label :name, "ジャンル名", class: 'form__label' %>
      <%= f.text_field :name, class: 'form__imput' %>
      <%= f.submit "変更を保存", class: 'form__button-genre' %>
    </div>
  <% end %>
</div>
