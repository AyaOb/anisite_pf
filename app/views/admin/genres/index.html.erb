<h3>ジャンル一覧</h3>
<%= form_with model:@genre, url:admin_genres_path, local: true do |f| %>
  <div>
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<table>
  <tbody>
    <tr>
      <th>ジャンル</th>
    </tr>
    <% @genre_list.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>