<% if genre.errors.any? %>
  <div class="form__error_explanation">
    <ul class="form__error-list">
      <% genre.errors.full_messages.each do |message| %>
        <li class="form__error-item"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="form__field">
  <%= f.label :name, "ジャンル名", class: 'form__label' %>
  <%= f.text_field :name, class: 'form__imput' %>
  <%= f.submit "変更を保存", class: 'form__button-genre' %>
</div>